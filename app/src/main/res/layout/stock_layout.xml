<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stock_cardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cards_stock_height"
    android:layout_marginStart="@dimen/cards_stock_vertical_margin"
    android:layout_marginEnd="@dimen/cards_stock_vertical_margin"
    android:layout_marginBottom="@dimen/cards_stock_vertical_margin"
    app:cardCornerRadius="@dimen/cards_stock_corner_radius"
    app:cardElevation="@dimen/cards_stock_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/stock_layout_img"
            android:layout_width="0dp"
            android:layout_height="@dimen/cards_stock_image_height"
            android:src="@drawable/ic_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stock_layout_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cards_stock_text_margin_start"
            android:layout_marginTop="@dimen/cards_stock_text_margin_top"
            android:layout_marginEnd="@dimen/cards_stock_text_margin_end"
            android:ellipsize="end"
            android:lines="3"
            app:layout_constraintEnd_toEndOf="@+id/stock_layout_img"
            app:layout_constraintStart_toStartOf="@+id/stock_layout_img"
            app:layout_constraintTop_toBottomOf="@id/stock_layout_img"
            tools:text="'это текст тект сте текст текст текст " />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stock_layout_price_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cards_stock_text_margin_start"
            android:layout_marginTop="@dimen/cards_stock_text_margin_top"
            android:layout_marginEnd="@dimen/cards_stock_text_margin_end"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/stock_layout_title"
            app:layout_constraintTop_toBottomOf="@id/stock_layout_title">

            <TextView
                android:id="@+id/stock_layout_price_cur_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="500" />

            <TextView
                android:id="@+id/stock_layout_price_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cards_stock_text_margin_start"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/stock_layout_price_cur_price"
                tools:text="600" />

            <TextView
                android:id="@+id/stock_layout_price_optional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="600" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>